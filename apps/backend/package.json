{
  "name": "@inventory-app/backend",
  "version": "0.0.1",
  "private": true,
 "scripts": {
  "build": "nx build backend",         
  "start": "node dist/apps/backend/main.js",
  "start:dev": "nx serve backend"
},
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@inventory-app/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@inventory-app/backend:build:development"
          },
          "production": {
            "buildTarget": "@inventory-app/backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "pg": "^8.16.0",
    "typeorm": "^0.3.24"
  }
}
